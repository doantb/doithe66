<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:id="@+id/ln_item_spn_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_avatar_bank"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/logo_acb_bank"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/txt_choice_span"
            android:layout_width="match_parent"
            android:layout_height="@dimen/huge_padding"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:lines="1"
            android:gravity="center"
            android:paddingLeft="@dimen/action_bar_margin_left"
            android:paddingRight="@dimen/action_bar_margin_left"
            android:textColor="@color/colorPrimary"
            android:text="acb"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/action_bar_margin_left"
        android:layout_marginRight="@dimen/action_bar_margin_left"
        android:background="@color/light_gray"
        />
</RelativeLayout>