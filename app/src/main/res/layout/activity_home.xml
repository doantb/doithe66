<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/action_bar_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:id="@+id/home_img_button_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_6sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            />
        <ImageView
            android:id="@+id/home_img_logo_action_bar"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/home_txt_title_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/home_img_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/ic_notification_50px"
            />
        <TextView
            android:id="@+id/home_txt_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="Đăng nhập"
            android:textColor="@color/color_white"
            android:textStyle="italic"
            android:visibility="gone"
            />
    </RelativeLayout>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar_home"
        >
        <FrameLayout
            android:id="@+id/fr_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>
        <fragment
            class="vn.doithe66.doithe66.fragment.NavigationFragment"
            android:id="@+id/frm_nav"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            ></fragment>
    </android.support.v4.widget.DrawerLayout>
    <include
        layout="@layout/my_progess_bar"
        android:visibility="gone"
        ></include>
</RelativeLayout>